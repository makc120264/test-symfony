<!DOCTYPE html>

<title>Demand</title>

{% block body %}
    <h1>Demand</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ demand.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ demand.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ demand.content }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ demand.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ demand.createdAt ? demand.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_demand_index') }}">back to list</a>

    <a href="{{ path('app_demand_edit', {'id': demand.id}) }}">edit</a>

    {{ include('demand/_delete_form.html.twig') }}
{% endblock %}
